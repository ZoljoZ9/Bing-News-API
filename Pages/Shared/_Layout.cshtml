<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta property="og:title" content="Loop News" />
    <meta property="og:description" content="Register now to keep in the loop of your latest news" />
    <meta property="og:image" content="https://loopnews.azurewebsites.net/logo.png  />
    <meta property="og:url" content="https://loopnews.azurewebsites.com" />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Loop News" />

    <title>@ViewData["Title"] - Loop News</title>

    <!-- Bootstrap CSS (from CDN) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <!-- Bootstrap Icons (for SVG icons) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Custom CSS files -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Info.styles.css" asp-append-version="true" />

    <!-- Font Awesome CSS (optional) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-SMVPPZ57X2"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());

        gtag('config', 'G-SMVPPZ57X2');
    </script>
</head>

<body>
    <header>
        @if (User.Identity.IsAuthenticated)
        {
            <!-- Authenticated Navbar -->
            <nav class="navbar navbar-expand-lg" aria-label="Fifth navbar example" style="background-color: var(--navbar-bg); color: var(--text-color);">
                <div class="container-fluid">
                    <a class="navbar-brand" href="#" style="color: var(--text-color);">Loop</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarsExample05" aria-controls="navbarsExample05" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarsExample05">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" href="/Dashboard" style="color: var(--text-color);">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/followingPage" style="color: var(--text-color);">Following</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/breakingSearchResults" style="color: var(--text-color);">Breaking</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/searchresultsUSA" style="color: var(--text-color);">U.S.</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/worldSearchResults" style="color: var(--text-color);">World</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#" style="color: var(--text-color);">Business</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#" style="color: var(--text-color);">Technology</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#" style="color: var(--text-color);">Entertainment</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#" style="color: var(--text-color);">Sports</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#" style="color: var(--text-color);">Science</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#" style="color: var(--text-color);">Health</a>
                            </li>

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown" aria-expanded="false" style="color: var(--text-color);">Options</a>
                                <ul class="dropdown-menu" style="background-color: var(--navbar-bg);">
                                    <li>
                                        <a class="dropdown-item" href="/Logout" style="color: var(--text-color, #000);"
                                           onclick="return confirm('Are you sure you want to sign out?');">
                                            Sign-out
                                        </a>
                                    </li>
                                    <li><a class="dropdown-item" href="#" style="color: var(--text-color);">Delete profile</a></li>
                                </ul>
                            </li>
                        </ul>
                        <form method="get" action="/PublicSearchResults" class="d-flex align-items-center" role="search" style="gap: 5px;">
                            <input class="form-control me-2"
                                   type="search"
                                   name="searchQuery"
                                   placeholder="Search"
                                   aria-label="Search"
                                   style="background-color: var(--input-bg); color: var(--text-color); border: 1px solid var(--container-surround);">
                            <button type="submit"
                                    class="btn btn-primary">
                                Search
                            </button>
                        </form>

                    </div>
                </div>
            </nav>
        }

        else
        {
            <!-- Navbar for unauthenticated users -->
            <nav class="navbar navbar-expand-sm border-bottom box-shadow">
                <div class="container">
                    <a class="navbar-brand" asp-area="" asp-page="/Index">Loop</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse">
                        <ul class="navbar-nav ms-auto">
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/Login">Login</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        }
    </header>

    <div class="layout-container">
        <div class="content-container">
            <!-- This is where the content from each page is rendered -->
            @RenderBody()
        </main>
    </div>

    <!-- Footer Section -->
        <!-- Footer Section -->
        <footer class="footer" style="position: relative;">
            <div class="container">
                <div>© 2024 Priority Coding, Inc</div>
                <div class="social-icons">
                    <a href="https://x.com/spixolZ9" aria-label="X (formerly Twitter)">
                        <i class="fa fa-twitter"></i>
                    </a>
                    <a href="https://www.instagram.com/zoljanz9/" aria-label="Instagram">
                        <i class="fa fa-instagram"></i>
                    </a>
                    <a href="https://www.facebook.com/prioritycoding9" aria-label="Facebook">
                        <i class="fa fa-facebook"></i>
                    </a>
                </div>
            </div>

            <!-- Theme Picker Dropdown -->
            <div class="dropdown theme-picker">
                <button class="btn btn-bd-primary py-2 dropdown-toggle d-flex align-items-center"
                        id="bd-theme"
                        type="button"
                        aria-expanded="false"
                        data-bs-toggle="dropdown"
                        aria-label="Toggle theme">
                    <i class="bi bi-circle-half"></i>
                    <span class="visually-hidden">Toggle theme</span>
                </button>
                <ul class="dropdown-menu dropdown-menu-end shadow">
                    <li>
                        <button id="lightThemeButton" class="dropdown-item d-flex align-items-center">
                            <i class="bi bi-sun-fill me-2"></i> Light
                        </button>
                    </li>
                    <li>
                        <button id="darkThemeButton" class="dropdown-item d-flex align-items-center">
                            <i class="bi bi-moon-stars-fill me-2"></i> Dark
                        </button>
                    </li>
                    <li>
                        <button id="autoThemeButton" class="dropdown-item d-flex align-items-center">
                            <i class="bi bi-circle-half me-2"></i> Auto
                        </button>
                    </li>
                </ul>
            </div>
        </footer>



    <!-- Bootstrap JS (from CDN) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    <!-- Custom JS files -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
