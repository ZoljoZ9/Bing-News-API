<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Info</title>

    <!-- Bootstrap CSS (from CDN) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <!-- Bootstrap Icons (for SVG icons) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Custom CSS files -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Info.styles.css" asp-append-version="true" />

    <!-- Font Awesome CSS (optional) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-SMVPPZ57X2"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());

        gtag('config', 'G-SMVPPZ57X2');
    </script>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm border-bottom box-shadow">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Loop</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Login">Login</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="layout-container">
        <div class="content-container">
            <!-- This is where the content from each page is rendered -->
            @RenderBody()
        </main>
    </div>

    <!-- Footer Section -->
    <!-- Footer Section -->
    <footer class="footer">
        <div class="container">
            <div>© 2024 Priority Coding, Inc</div>
            <div class="social-icons">
                <a href="https://x.com/spixolZ9" aria-label="X (formerly Twitter)">
                    <i class="fa fa-twitter"></i> <!-- Twitter icon as a placeholder for "X" -->
                </a>
                <a href="https://www.instagram.com/zoljanz9/" aria-label="Instagram">
                    <i class="fa fa-instagram"></i> <!-- Instagram icon -->
                </a>
                <a href="https://www.facebook.com/prioritycoding9" aria-label="Facebook">
                    <i class="fa fa-facebook"></i> <!-- Facebook icon -->
                </a>
            </div>
        </div>
    </footer>


    <!-- Theme Picker Dropdown (Place it after the footer) -->
    <div class="dropdown theme-picker position-fixed">
        <button class="btn btn-bd-primary py-2 dropdown-toggle d-flex align-items-center"
                id="bd-theme"
                type="button"
                aria-expanded="false"
                data-bs-toggle="dropdown"
                aria-label="Toggle theme">
            <i class="bi bi-circle-half"></i>
            <span class="visually-hidden">Toggle theme</span>
        </button>
        <ul class="dropdown-menu dropdown-menu-end shadow">
            <li>
                <button id="lightThemeButton" class="dropdown-item d-flex align-items-center">
                    <i class="bi bi-sun-fill me-2"></i> Light
                </button>
            </li>
            <li>
                <button id="darkThemeButton" class="dropdown-item d-flex align-items-center">
                    <i class="bi bi-moon-stars-fill me-2"></i> Dark
                </button>
            </li>
            <li>
                <button id="autoThemeButton" class="dropdown-item d-flex align-items-center">
                    <i class="bi bi-circle-half me-2"></i> Auto
                </button>
            </li>
        </ul>
    </div>


    <!-- Bootstrap JS (from CDN) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    <!-- Custom JS files -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
